{
  "name": "simple-overlay",
  "description": "Polymer-based web component for a D2L simple overlay",
  "scripts": {
    "postinstall": "bower install",
    "test": "npm run test:lint:js && npm run test:lint:wc && npm run test:unit:wct",
    "test:lint:js": "eslint --ext .js,.html . test/ demo/",
    "test:lint:wc": "polymer lint",
    "test:unit:wct": "cross-env LAUNCHPAD_BROWSERS=firefox wct -p"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Brightspace/simple-overlay.git"
  },
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Brightspace/simple-overlay/issues"
  },
  "homepage": "https://github.com/Brightspace/simple-overlay#readme",
  "devDependencies": {
    "bower": "^1.8.0",
    "cross-env": "^5.0.1",
    "eslint": "^3.14.1",
    "eslint-config-brightspace": "^0.2.4",
    "eslint-plugin-html": "^2.0.0",
    "polymer-cli": "^1.3.1",
    "web-component-tester": "^6.0.0"
  }
}
